{
  "name": "hypermd",
  "version": "0.4.0",
  "description": "Real WYSIWYG Markdown editor, breaks the wall between writing and preview.",
  "main": "./everything.js",
  "types": "./everything.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "hmd-run npm:build-*",
    "prebuild-js": "node scripts/pre-build.js",
    "build-js": "hmd-run npm:buildjs-*",
    "buildjs-bundle": "rollup -c",
    "buildjs-umd": "tsc && hmd-transpile --map -o . everything.js common.js addon/*.js core/*.js goods/*.js keymap/*.js mode/*.js powerpack/*.js",
    "postbuild-js": "node scripts/post-build.js",
    "build-css": "node scripts/build-css.js",
    "build-doc": "cd scripts/docgen && ts-node index.ts",
    "debug:build-doc": "cd scripts/docgen && node --inspect-brk=31282 -r ts-node/register index.ts",
    "dev": "hmd-run npm:watch-* hmd-hs",
    "watch-js": "tsc -w --module amd --sourceMap --sourceRoot /src",
    "watch-css": "node scripts/build-css.js -w",
    "pretest": "cd test && tsc && node tools/prepare",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "markdown",
    "codemirror",
    "wysiwyg"
  ],
  "homepage": "https://laobubu.net/HyperMD/",
  "author": "laobubu <laobubu@gmail.com> (http://laobubu.net)",
  "license": "MIT",
  "devDependencies": {
    "@hypermd/build-tools": "https://github.com/HyperMD/build-tools.git",
    "@types/mermaid": "^8.0.0",
    "codemirror": "^5.37.0",
    "express": "^4.16.3",
    "glob": "^7.1.2",
    "minimatch": "^3.0.4",
    "rollup": "^0.66.4",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-typescript2": "^0.17.1",
    "rollup-plugin-uglify": "^6.0.0",
    "sass": "^1.14.1",
    "typescript": "^3.1.1"
  },
  "peerDependencies": {
    "codemirror": "^5.37.0"
  },
  "optionalDependencies": {
    "@types/codemirror": "^0.0.56",
    "emojione": "^3.1.6",
    "flowchart.js": "^1.11.2",
    "katex": "^0.10.0-alpha",
    "marked": "^0.4.0",
    "mathjax": "^2.7.0",
    "mermaid": "^8.0.0-rc.8",
    "turndown": "^4.0.1",
    "turndown-plugin-gfm": "^1.0.1",
    "twemoji": "^11.0.0"
  }
}
