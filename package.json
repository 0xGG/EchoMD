{
  "name": "hypermd",
  "version": "0.3.11",
  "description": "A full-featured Markdown editor, breaks the wall between writing and preview.",
  "main": "./everything.js",
  "types": "./everything.d.ts",
  "scripts": {
    "build": "node dev/build-all.js",
    "prebuild_js": "node dev/pre-build.js",
    "build_js": "tsc && rollup -c",
    "postbuild_js": "node dev/post-build.js",
    "build_css": "node dev/build-css.js",
    "build_doc": "cd dev/docgen && tsc && node ../tmp/index.js",
    "dev": "node dev/dev.js",
    "watch_js": "tsc -w --sourceMap --sourceRoot /src",
    "watch_css": "node dev/build-css.js -w",
    "pretest": "cd test && tsc && node tools/prepare",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "markdown",
    "codemirror",
    "wysiwyg"
  ],
  "homepage": "https://laobubu.net/HyperMD/",
  "author": "laobubu <laobubu@gmail.com> (http://laobubu.net)",
  "license": "MIT",
  "devDependencies": {
    "@types/codemirror": "^0.0.81",
    "@types/glob": "^7.1.1",
    "@types/markdown-it": "^0.0.9",
    "@types/mermaid": "^8.2.1",
    "@types/tern": "^0.23.3",
    "@types/yamljs": "^0.2.30",
    "codemirror": "^5.49.2",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "minimatch": "^3.0.4",
    "opn": "^6.0.0",
    "rollup": "^1.27.9",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "rollup-plugin-uglify": "^6.0.3",
    "sass": "^1.23.7",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "codemirror": "^5.49.2"
  },
  "optionalDependencies": {
    "echarts": "^4.5.0",
    "emojione": "^4.5.0",
    "flowchart.js": "^1.13.0",
    "jsonic": "^0.3.1",
    "katex": "^0.11.1",
    "marked": "^0.7.0",
    "mathjax": "^2.7.7",
    "mermaid": "^8.4.3",
    "plantuml-encoder": "^1.4.0",
    "prismjs": "^1.17.1",
    "turndown": "^5.0.3",
    "turndown-plugin-gfm": "^1.0.2",
    "twemoji": "^12.1.4",
    "yamljs": "^0.3.0",
    "markdown-it": "^10.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.2"
  }
